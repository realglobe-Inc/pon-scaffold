language: node_js
services:
  - docker
node_js:
  - '10'
before_install:
  - echo "//registry.npmjs.org/:_authToken=${NPM_TOKEN}" > .npmrc
  - npm install publish-if-needed npm@latest pm2 pon jsdoc -g
install:
  - npm install
script:
  - pon prepare
  - pon build
after_success:
  - publish-if-needed
env:
  global:
    - secure: 
